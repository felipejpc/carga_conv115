<%= simple_form_for @arquivo, html: {multipart: true}  do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :arquivo, label: 'Selecione o Arquivo:', as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit , value: 'Carregar Arquivo', class: 'btn btn-primary' %>
  </div>
<% end %>
